@model GlobalPortal.Api.Demo.Models.GenericModel<AppointmentRequestReasonReceivedModel>

@using GlobalPortal.Api.Models.AppointmentRequestReasons
@using GlobalPortal.Api.Demo.Views.AppointmentRequestReasonsSent
@using GlobalPortal.Api.Demo.Properties

@{
    ViewBag.Title = IndexResources.PageTitle;
}

<h2>@IndexResources.MainHeader</h2>

@if (Model.Data.Success == true && !string.IsNullOrWhiteSpace(Model.Data.ResultMessage))
{
    <div class="alert alert-success alert-dismissible fade in" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>@Model.Data.ResultMessage</div>
}
else if (Model.Data.Success == false && !string.IsNullOrWhiteSpace(Model.Data.ResultMessage))
{
    <div class="alert alert-danger alert-dismissible fade in" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>@Model.Data.ResultMessage</div>
}


<div class="panel panel-default">
    <div class="panel-heading">@IndexResources.MarkAsChanged</div>
    <div class="panel-body">
        @using (Html.BeginForm("Send", "AppointmentRequestReasonsSent", FormMethod.Post, new { @class = "form-horizontal" }))
            {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="InternalID" class="col-sm-2 control-label">@Resources.ID</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Data.InternalID, null, new { @class = "form-control", id = "InternalID" })
                </div>
            </div>
            <div class="form-group">
                <label for="LastChanged" class="col-sm-2 control-label">@IndexResources.LastChanged</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Data.LastChanged, null, new { @class = "form-control", id = "LastChanged" })
                </div>
            </div>
            <div class="form-group col-sm-12">
                <button class="btn btn-primary" type="submit">@IndexResources.SendData</button>
            </div>
        }
    </div>
</div>