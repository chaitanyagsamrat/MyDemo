@model GlobalPortal.Api.Demo.Models.GenericModel<ClosedFormModel>

@using GlobalPortal.Api.Models.Forms
@using GlobalPortal.Api.Demo.Models
@using GlobalPortal.Api.Demo.Views.ClosedForms
@using GlobalPortal.Api.Demo.Properties


@{
    ViewBag.Title = IndexResources.PageTitle;
}

<h2>@IndexResources.MainHeader</h2>
@if (Model.ResultMessage != string.Empty)
{
    <div class="alert alert-success alert-dismissible fade in" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>@Model.ResultMessage</div>
}
@if (Model.ErrorMessage != string.Empty)
{
    <div class="alert alert-danger alert-dismissible fade in" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>@Model.ErrorMessage</div>
}
<div class="panel panel-default">
    <div class="panel-heading">@Resources.GetHeader</div>
    <div class="panel-body">
        @using (Html.BeginForm("Get", "ClosedForms", FormMethod.Get, new { @class = "form-horizontal" }))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="id" class="col-sm-1 control-label">@Resources.ID</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="id" name="id" placeholder="@IndexResources.Search">
                </div>
                <button class="hidden-xs btn btn-primary">@Resources.GetData</button>
            </div>
            <div class="row col-sm-12 visible-xs">
                <button class="btn btn-primary">@Resources.GetData</button>
            </div>}
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">@Resources.ResultsHeader</div>
    <div class="panel-body">
        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage) || Model.Data.ID.Equals(Guid.Empty))
        {
            <div class="row form-group">
                <label for="resultId" class="col-sm-1 control-label" style="width: 250px;">@Resources.ID</label>
                <div class="col-sm-8">
                    @Html.TextBox("resultId", null, new { @class = "form-control ", disabled = "disabled", id = "resultId" })
                </div>
            </div>
            <div class="row form-group">
                <label for="resultClosedFormName" class="col-sm-1 control-label" style="width: 250px;">@IndexResources.Name</label>
                <div class="col-sm-8">
                    @Html.TextBox("resultClosedFormName", null, new { @class = "form-control", disabled = "disabled", id = "resultClosedFormName" })
                </div>
            </div>
            <div class="row form-group">
                <label for="resultClosedStatus" class="col-sm-1 control-label" style="width: 250px;">@IndexResources.Status</label>
                <div class="col-sm-8">
                    @Html.TextBox("resultClosedStatus", null, new { @class = "form-control", disabled = "disabled", id = "resultClosedStatus" })
                </div>
            </div>
            <div class="row form-group">
                <label for="resultClosedDateCreated" class="col-sm-1 control-label" style="width: 250px;">@IndexResources.DateCreated</label>
                <div class="col-sm-8">
                    @Html.TextBox("resultClosedDateCreated", null, new { @class = "form-control", disabled = "disabled", id = "resultClosedDateCreated" })
                </div>
            </div>
        }
        else
        {
            <div class="row form-group">
                <label for="resultId" class="col-sm-1 control-label" style="width: 250px;">@Resources.ID</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Data.ID, null, new { @class = "form-control", disabled = "disabled", id = "resultId" })
                </div>
            </div>
            <div class="row form-group">
                <label for="resultClosedFormName" class="col-sm-1 control-label" style="width: 250px;">@IndexResources.Name</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Data.FormLayoutName, null, new { @class = "form-control", disabled = "disabled", id = "resultClosedFormName" })
                </div>
            </div>
            <div class="row form-group">
                <label for="resultClosedStatus" class="col-sm-1 control-label" style="width: 250px;">@IndexResources.Status</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Data.Status, null, new { @class = "form-control", disabled = "disabled", id = "resultClosedStatus" })
                </div>
            </div>
            <div class="row form-group">
                <label for="resultClosedDateCreated" class="col-sm-1 control-label" style="width: 250px;">@IndexResources.DateCreated</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Data.CreationDate, null, new { @class = "form-control", disabled = "disabled", id = "resultClosedDateCreated" })
                </div>
            </div>

            @*<div class="row col-sm-12">
                    @using (Html.BeginForm("Delete", "Allergies", FormMethod.Post))
                      {
                          <input name="id" class="form-control" type="hidden" value="@Model.Data.ExternalId" />
                          <button class="btn btn-primary" @(Model.Data.ExternalId == null || Model.ErrorMessage != string.Empty ? "disabled" : "" )>@Resources.DeleteData</button>
                      }
            </div>*@
        }
    </div>
</div>
